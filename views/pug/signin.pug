doctype html
html(lang='en')
  head
    // Required meta tags
    title Signup
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    // Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1' crossorigin='anonymous')
    title NightNotes
    style.
      footer {
      text-align: center;
      padding-bottom: 10px;
      padding-top: 10px;
      }
      {% load static %}
      body {
      font-family: sans-serif;
      background: url('http://localhost:3000/public/black-sky.jpg');
      background-size: 100% 100%;
      height: 100%;
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
      margin-bottom: 40px;
      }
      h1, h2, p, div {
      color: white;
      margin-left: 40px;
      }
      h2 {
      font-size: 3em;
      }

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href='/home') NightNotes
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
          span.icon-bar
          span.icon-bar
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/signin') Login
            li.nav-item
              a.nav-link(href='/signup') Sign up
    .col-md-4-offset-md-4
      br
      br
      h1.center Log in
      p Please login
      form(action='/login', method='post').center
        div
          input(type='text', name='username', placeholder='Enter username')
        br
        div
          input(type='password', name='password', placeholder='Enter password')
        br
        div
          input.btn.btn-primary.btn-lg(type='submit' value='Log in')
      br
      br
      p New to NightNotes? Sign-up <a href='signup'>here</a>.
      br
      br
    footer.footer.navbar-dark.bg-dark.fixed-bottom
      .container
        span.text-muted Â© NightNotes 2021
